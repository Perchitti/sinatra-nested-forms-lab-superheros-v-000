


<h1>Display your Pirate here</h1>
<div class="team">
  <h3>Name: <%= @team.name %></h3>
  <h4>Motto: <%= @team.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div>

<h1>Display Your Ships:</h1>

<% @ships.each do |ship|%>
  <div class="ship">
    <h3>Name: <%=ship.name%></h3>
    <h4>Type: <%=ship.type%></h4>
    <h4>Booty: <%=ship.booty%></h4>
  </div>
<%end%>
